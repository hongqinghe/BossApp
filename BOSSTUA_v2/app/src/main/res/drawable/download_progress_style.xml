<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/c_e3e3e3"
                android:centerY="0.75"
                android:endColor="@color/c_e3e3e3"
                android:startColor="@color/c_e3e3e3" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/c_f29c06"
                    android:centerY="0.75"
                    android:endColor="@color/c_f29c06"
                    android:startColor="@color/c_f29c06" />
            </shape>
        </clip>
    </item>

</layer-list>