<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

    <TextView
        android:id="@+id/goods_left_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:textSize="@dimen/goods_left_item_text_size"
        android:textColor="@drawable/selector_text_blue"/>

    <ImageView
        android:id="@+id/goods_left_item_icon"
        android:layout_marginLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/goods_left_item_name"
        android:layout_alignBottom="@id/goods_left_item_name"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
</RelativeLayout>
