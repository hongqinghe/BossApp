<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.android.app.buystoreapp.managementservice.SeeMeActivity">

    <include
        android:id="@+id/include"
        layout="@layout/head_layout_blue"
        />

    <LinearLayout
        android:id="@+id/ll_visibility"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/c_eeeeee"/>

        <ListView
            android:id="@+id/lv_see_me"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_member"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_to_vip"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_see_me_empty_lcon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="16sp"
            android:textColor="@color/c_404040"
            android:layout_marginTop="30dp"
            android:text="亲爱的Boss,开通vip特权才能查看谁看过您"
            />

    </LinearLayout>
</LinearLayout>
