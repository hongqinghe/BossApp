<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:background="@color/c_168eef"
                android:layout_height="@dimen/activity_top_height">

    <ImageButton
        android:id="@+id/id_custom_back_image"
        style="@style/CustomActionBarBack"
        android:layout_width="60dp"
        android:layout_height="@dimen/activity_top_height"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"/>


    <TextView
        android:id="@+id/id_custom_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_top_height"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_custom_edit_action"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_custom_edit"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text=""
            android:textStyle="bold"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/id_custom_favourite_action"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_custom_favourite_unselected"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/id_custom_delete_action"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_custom_delete"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/id_custom_share_action"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_custom_share"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>