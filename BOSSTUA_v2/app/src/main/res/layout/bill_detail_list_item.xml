<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_bill_detail_date"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <!--<TextView-->
            <!--android:id="@+id/tv_bill_list_item_date"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="昨天"/>-->

        <TextView
            android:gravity="center"
            android:id="@+id/tv_bill_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:text="12:00"/>
    </LinearLayout>

    <com.android.app.buystoreapp.widget.RoundImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_bill_detail_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/ll_bill_detail_date"
        android:padding="10dp"
        android:src="@drawable/ic_bill_detail_item_head"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_bill_detail_bill"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/iv_bill_detail_head"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bill_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="支出"/>
            <TextView
                android:id="@+id/tv_bill_list_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="￥46.78"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bill_list_item_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="商品标题-服务商-服务者"/>
    </LinearLayout>
</LinearLayout>