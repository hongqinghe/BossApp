<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/service_error"
            android:layout_marginBottom="15dp"
            android:id="@+id/service_error_image"
            />

        <TextView
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_error_hint"
            android:textColor="@color/c_515151"
            android:textSize="14sp"
            android:id="@+id/service_error_hint"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:textColor="@drawable/bt_service_error"
            android:text="@string/service_error_but"
            android:textSize="14sp"
            android:id="@+id/service_error_btn"
            android:background="@color/white"
            />

    </LinearLayout>


</FrameLayout>