<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/head_layout_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/id_goods_left_list"
            style="@style/CustomListView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@color/c_dfdfdf"
            android:dividerHeight="1dp"
            android:scrollbars="none"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/c_dfdfdf" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

          <!--  <ImageView
                android:id="@+id/iv_title_banner"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/bg_resource" />-->

            <ListView
                android:id="@+id/id_goods_right_list"
                style="@style/CustomListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>