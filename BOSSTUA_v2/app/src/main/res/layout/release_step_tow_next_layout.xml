<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white">

    <ScrollView
        android:id="@+id/sl_release_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/release_top_step_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每周"
                    android:textColor="@color/c_404040"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/et_service_week_from"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corners_gray_bg"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:text="周一"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="至"
                    android:textColor="@color/c_404040"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_service_week_to"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_gray_bg"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:text="周五"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="如(周一至周五)"
                    android:textColor="@color/c_858585"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每天"
                    android:textColor="@color/c_404040"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/et_service_day_from"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corners_gray_bg"
                    android:padding="5dp"
                    android:text="9:00"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="至"
                    android:textColor="@color/c_404040"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/et_service_day_to"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_gray_bg"
                    android:inputType="time"
                    android:padding="5dp"
                    android:text="17:00"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="如(9:00至17:00)"
                    android:textColor="@color/c_858585"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_select_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资源・服务地址"
                    android:textColor="@color/c_404040"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_dddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:textColor="@color/c_999999"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="具体位置"
                    android:textColor="@color/c_404040"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_street_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:textColor="@color/c_999999"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_eeeeee"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="服务主体"
                android:textColor="@color/c_676767"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <RadioGroup
                    android:id="@+id/rg_release_service_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_release_service_body_boss"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="BOSS"
                        android:textColor="@drawable/selector_text_blue"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_release_service_body_company"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="机构"
                        android:textColor="@drawable/selector_text_blue"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_release_service_body_personal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="个人"
                        android:textColor="@drawable/selector_text_blue"
                        android:textSize="12sp"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_eeeeee"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="交易方式"
                android:textColor="@color/c_676767"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <RadioGroup
                    android:id="@+id/rg_release_service_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_release_service_transaction_on"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="线上"
                        android:textColor="@drawable/selector_text_blue"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_release_service_transaction_off"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="线下"
                        android:textColor="@drawable/selector_text_blue"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_release_service_transaction_freight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="运送"
                        android:textColor="@drawable/selector_text_blue"
                        android:textSize="12sp"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c_eeeeee"/>

            <LinearLayout
                android:id="@+id/ll_release_freight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="运送方式"
                    android:textColor="@color/c_676767"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <RadioGroup
                        android:id="@+id/rg_release_service_freight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_release_service_freight_free"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="免运费"
                            android:textColor="@drawable/selector_text_blue"
                            android:textSize="12sp"/>

                        <RadioButton
                            android:id="@+id/rb_release_service_freight_pay"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/release_choice_radiobutton_blue_line_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="运费价格"
                            android:textColor="@drawable/selector_text_blue"
                            android:textSize="12sp"/>
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/ll_freightPrice"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="运费"
                                android:textColor="@color/c_404040"
                                android:textSize="13sp"/>

                            <TextView
                                android:id="@+id/et_release_service_freight_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/corners_gray_bg"
                                android:inputType="number"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text=""
                                android:textSize="16sp"/>


                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="元起"
                            android:textColor="@color/c_858585"
                            android:textSize="12sp" />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_release_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_168eef"
            android:gravity="center"
            android:text="上一步"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_release_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c_ffcc35"
            android:gravity="center"
            android:text="发布"
            android:textSize="16sp"/>
    </LinearLayout>
</FrameLayout>