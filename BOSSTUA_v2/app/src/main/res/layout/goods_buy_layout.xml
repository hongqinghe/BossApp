<?xml version="1.0" encoding="utf-8"?>
<com.android.app.buystoreapp.widget.KeyboardListenRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                 xmlns:tools="http://schemas.android.com/tools"
                                                                 android:id="@+id/rl_goods_buy"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="match_parent"
                                                                 android:background="@color/c_f0f0f0"
                                                                 tools:context=".goods.ShopDetailInfoActivity">

    <com.android.app.buystoreapp.widget.ReboundScrollView
        android:id="@+id/id_goods_buy_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <!--  <View
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/activity_top_height" />-->

            <FrameLayout
                android:id="@+id/fl_goods_details_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pic_big"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/id_goodsdetail_adv_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/id_goodsdetail_adv_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:clickable="false"
                    app:fillColor="#168eef"
                    app:pageColor="@color/white"
                    app:radius="3dp"
                    app:strokeColor="#168eef"
                    app:strokeWidth="1dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <com.android.app.buystore.utils.CircleImageView
                        android:id="@+id/id_home_item_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/id_home_item_image"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/id_home_item_image"
                        android:layout_toRightOf="@+id/id_home_item_image"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_user_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_user_name"
                        android:layout_toEndOf="@+id/tv_user_name"
                        android:layout_toRightOf="@+id/tv_user_name"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/iv_goods_details_leve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_user_profession"
                        android:layout_alignTop="@+id/tv_user_profession"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/tv_user_profession"
                        android:layout_toRightOf="@+id/tv_user_profession"
                        android:src="@drawable/vip_bojin"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_user_name"
                        android:layout_alignStart="@+id/tv_user_name"
                        android:layout_below="@+id/tv_user_name"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_money"/>

                        <TextView
                            android:id="@+id/tv_user_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/c_999999"
                            android:textSize="10sp"/>

                        <ImageView
                            android:id="@+id/iv_info_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/iv_user_info_verified"/>

                        <ImageView
                            android:id="@+id/iv_user_info_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            />


                        <ImageView
                            android:id="@+id/iv_user_info_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            />

                        <ImageView
                            android:id="@+id/iv_user_info_profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_attentiong"/>

                        <TextView
                            android:id="@+id/tv_goods_scan_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_999999"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_attention_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_orange_bg"
                        android:padding="5dp"
                        android:text="+关注"
                        android:textColor="@color/c_999999"/>

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/id_home_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/c_404040"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/id_home_item_title"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_browse"/>

                    <TextView
                        android:id="@+id/tv_goods_detail_browse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/c_999999"
                        android:textSize="10sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_location"/>

                    <TextView
                        android:id="@+id/id_home_item_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/c_999999"
                        android:textSize="10sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/id_home_item_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/id_home_item_title"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:lineSpacingExtra="1.5dp"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/c_404040"
                    android:textScaleX="1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_time_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/id_home_item_salenum"
                    android:layout_marginLeft="15dp"
                    android:text="工作时间:周一至周五(早9:00-晚17.00)"
                    android:textColor="@color/c_999999"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@id/id_home_item_intro"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_home_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="998"
                        android:textColor="@color/c_ee0000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_pro_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/单"
                        android:textColor="@color/c_ee0000"
                        android:textSize="10sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_fireght_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费:25元"
                        android:textColor="@color/c_ee0000"
                        android:textSize="10sp"/>
                </LinearLayout>


                <!-- <RatingBar
                     android:id="@+id/ratingBar"
                     style="@style/CustomRatingBar"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true"
                     android:layout_below="@+id/textView"
                     android:layout_marginLeft="10dp"
                     android:rating="4" />-->

                <TextView
                    android:id="@+id/id_home_item_salenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/id_home_item_intro"
                    android:layout_alignStart="@+id/id_home_item_intro"
                    android:layout_below="@+id/ll_price"
                    android:layout_marginTop="5dp"
                    android:text="已售[69]"
                    android:textColor="@color/c_999999"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/id_home_item_salenum"
                    android:layout_alignBottom="@+id/id_home_item_salenum"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/id_home_item_salenum"
                    android:layout_toRightOf="@+id/id_home_item_salenum"
                    android:text="仅剩[998]"
                    android:textColor="@color/c_999999"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:id="@+id/ll_service_idea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_surplus"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/tv_surplus"
                    android:layout_toRightOf="@+id/tv_surplus"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务方式："
                        android:textColor="@color/c_999999"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tv_service_idea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_999999"
                        android:textSize="10sp"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_choice_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:text="选择分类组合"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_app_jinru"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_goods_details_more_resourse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="我的更多资源服务"
                    android:textColor="@color/c_404040"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView9"
                    android:layout_toEndOf="@+id/textView9"
                    android:layout_toRightOf="@+id/textView9"
                    android:src="@drawable/ic_click"/>
            </RelativeLayout>
            <!--购买评价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_goods_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_buy_comment"/>

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="购买评价"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_personal_item_right_icon_16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_commend_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_4bb0fe_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="好评(99+)"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_commend_mindle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_79c5ff_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="中评(99+)"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_commend_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_b4e1ff_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="差评(99+)"/>
                </LinearLayout>

            </LinearLayout>
            <!--留言区-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_leave_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_message_board"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="留言区"/>

                    <!-- <View
                         android:layout_width="0dp"
                         android:layout_height="1dp"
                         android:layout_weight="1" />

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="15dp"
                         android:src="@drawable/ic_personal_item_right_icon_16" />-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_leave_message_empty"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="点我留言吧！"
                        android:textColor="@color/c_999999"/>
                </LinearLayout>

                <com.android.app.buystoreapp.widget.ListViewForScrollView
                    android:id="@+id/lv_leave_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scrollbars="none"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_leave_mesage_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/corners_orange_bg"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:text="查看更多留言"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <!--猜你喜欢-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="猜你喜欢"
                    android:textColor="@color/c_404040"
                    android:textSize="14sp"/>

                <!--<android.support.v7.widget.RecyclerView
                    android:id="@+id/id_recyclerview_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />-->
                <com.android.app.buystoreapp.widget.GridViewForScrollView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:scrollbars="none"
                    android:verticalSpacing="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.android.app.buystoreapp.widget.ReboundScrollView>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:layout_gravity="top"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/id_goodsdetail_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_custom_back"/>
        <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="商品详情"
                    android:textColor="@color/white"
                    android:textSize="18sp" />-->

        <ImageView
            android:id="@+id/id_goodsdetail_shoppingcar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_goods_report"/>

        <ImageView
            android:id="@+id/shareImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/id_goodsdetail_shoppingcar"
            android:layout_toStartOf="@+id/id_goodsdetail_shoppingcar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_goods_share"/>

        <ImageView
            android:id="@+id/iv_goods_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/shareImage"
            android:layout_toStartOf="@+id/shareImage"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_goods_comment"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/goodsdetail_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_bottom_height"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_goodsdetail_store_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_bottom_height"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|right"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_private"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/goodsdeatil_store"
                android:textSize="@dimen/shop_detail_bottom_btn"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_goodsdetail_star_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_bottom_height"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/id_goodsdetail_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_contact_our"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/goodsdeatil_star"
                android:textSize="@dimen/shop_detail_bottom_btn"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CallText"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_bottom_height"
            android:layout_weight="1"
            android:gravity="center_horizontal|right"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_message_bottom"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="@string/goodsdetail_call"
                android:textSize="@dimen/shop_detail_bottom_btn"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_goodsdetail_addcart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:drawableTop="@drawable/ic_shopping_car"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:text="@string/goodsdeatil_addcart"
                android:textColor="#515151"
                android:textSize="11sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/id_goodsdetail_buynow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#22a8ff"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="@string/goodsdeatil_buy"
            android:textColor="@color/white"
            android:textSize="@dimen/shop_detail_bottom_btn"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_bottom_height"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/white"
            android:weightSum="1">


            <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1.02"
                android:maxEms="50"
                android:background="@drawable/shape_bg_categories"
                android:hint="说点什么吧..."
                android:textSize="12sp"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_leave_message_send"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/c_168eef"
            android:text="发送"
            android:textColor="@color/white"/>

    </LinearLayout>
</com.android.app.buystoreapp.widget.KeyboardListenRelativeLayout>