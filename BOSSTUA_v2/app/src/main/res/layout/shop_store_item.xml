<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="@dimen/business_item_padding">

    <ImageView
        android:id="@+id/id_business_store_icon"
        android:layout_width="@dimen/business_store_item_icon_width"
        android:layout_height="@dimen/business_store_item_icon_height"
        android:padding="@dimen/business_item_padding"/>

    <TextView
        android:id="@+id/id_business_store_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="left|center_vertical"
        android:padding="@dimen/business_item_padding"
        android:textSize="@dimen/business_store_item_title"/>

</LinearLayout>